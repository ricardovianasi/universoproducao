function hora($valor)
{
    if ($valor == '00:00:00') {
        $texto = "";
    } else {
        $texto = date('H:i', strtotime($valor));
        $texto = str_replace(':','h',$texto);
        $texto = str_replace('h00','h',$texto);
    }
    return $texto;
}
